SERVER_PORT=8080

# 보안 헤더(HSTS) 설정
# Cafe24 프록시에서 TLS 종료 후 앱이 응답 헤더만 추가합니다.
# 초기엔 짧게(예: 1일=86400) 적용 후 점진 확대 권장.
APP_SECURITY_HSTS_ENABLED=true
APP_SECURITY_HSTS_MAX_AGE=86400
APP_SECURITY_FORCE_HTTPS_ENABLED=true
